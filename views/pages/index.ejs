
<% include header %>

<form action="/" method="post" class="ui form">

    <div class="field">
        <label for="message">Message</label>
        <textarea name="message" id="message" cols="" rows=""></textarea>
    </div>

    <button type="submit" class="ui blue labled submit icon button">

        <i class="icon edit"></i>Envoyer
    </button>
</form>

<div class="ui comments">

    <h3 class="ui dividing header">Commentaires</h3>
    <% for(message of messages) { %>
    <div class="comment">

        <a href="/message/<%= message.id %>" class="avatar">
            <img src="/assets/images/avatar.jpg" alt="">
        </a>
        <div class="content">
            <div class="metadata">
                <div class="date">
                    <%= moment(message.created_at).fromNow()  %>
                </div>
            </div>
            <div class="test">

                <%= message.content %>

            </div>
        </div>
    </div>
    <br>
    <% } %>
</div>
<% include footer %>
